<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VR_Phone_10_digits</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
					NOT(ISBLANK(Phone)),
					LEN(Phone) &lt;&gt; 10
					)</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Le numéro de téléphone doit comporter 10 chiffres.</errorMessage>
</ValidationRule>
